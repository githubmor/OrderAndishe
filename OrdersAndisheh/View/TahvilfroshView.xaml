<Window x:Class="OrdersAndisheh.View.TahvilfroshView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TahvilfroshView"  
        DataContext="{Binding Tahvilforosh, Source={StaticResource Locator}}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="46*"/>
            <RowDefinition Height="459*"/>
        </Grid.RowDefinitions>
        <StackPanel FlowDirection="RightToLeft" Margin="10" Orientation="Horizontal" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <Button Content="Button" Command="{Binding GetFile}"/>
            <Label Content="{Binding FilePath}"/>

        </StackPanel>
        <DataGrid FlowDirection="RightToLeft" ItemsSource="{Binding ErsalListForTahvilFrosh}" AutoGenerateColumns="True" Margin="10" HorizontalAlignment="Stretch"  Grid.Row="1" VerticalAlignment="Stretch"/>

    </Grid>
</Window>
