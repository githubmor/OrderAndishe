<Window x:Class="OrdersAndisheh.View.DriverSelectionView"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
        DataContext="{Binding DriverSel, Source={StaticResource Locator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" Margin="0" Orientation="Vertical">
            <Label Content="لیست ارسال " Margin="0" FlowDirection="RightToLeft"/>


            <dxe:ListBoxEdit
    			DisplayMember="Kala" x:Name="ErsallistBox" FlowDirection="RightToLeft" Margin="10" 
                Height="444" ItemsSource="{Binding ErsalItems}" />
        </StackPanel>
        <WrapPanel FlowDirection="RightToLeft" ScrollViewer.CanContentScroll="True">
            <dxe:ListBoxEdit
        		DisplayMember="Kala" x:Name="DriverListBox1" FlowDirection="RightToLeft" Margin="10" 
                Width="150" Height="150" ItemsSource="{Binding DriverItems1}" />
            <dxe:ListBoxEdit
        		DisplayMember="Kala" x:Name="DriverListBox2" FlowDirection="RightToLeft" Margin="10" 
                Width="150" Height="150" ItemsSource="{Binding DriverItems[2]}" />
        </WrapPanel>


    </Grid>
    

</Window>
