                    <Binding Path="Text" ElementName="ranande" />
                    <Binding Path="Text" ElementName="maghsad" />
                    <Binding Path="Text" ElementName="tarikh"  />
                </MultiBinding>
            </dxg:GridControl.FilterCriteria>
        </dxg:GridControl>
