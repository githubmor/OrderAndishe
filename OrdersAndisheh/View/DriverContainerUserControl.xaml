<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="OrdersAndisheh.View.DriverContainerUserControl" 
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <dxe:ListBoxEdit Margin="10" Grid.Row="0" Height="150" Width="200" ItemsSource="{Binding }"/>
        <dx:UniformStackPanel FlowDirection="RightToLeft" Orientation="Vertical" Grid.RowSpan="1" Grid.Row="1" >
            
            <Label Content="وزن کل :"  VerticalContentAlignment="Center"/>
            <Label Content="تعداد جایگاه :"  VerticalContentAlignment="Center"/>
            <Label Content="نوع ماشین :"  VerticalContentAlignment="Center"/>
            <Label Content="تعداد پالت فلزی :"  VerticalContentAlignment="Center"/>
            <Label Content="تعداد پالت چوبی :" VerticalContentAlignment="Center"/>
        </dx:UniformStackPanel>

    </Grid>
</UserControl>
